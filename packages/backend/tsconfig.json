{
  "extends": "@cairo-coder/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src",
    "**/*.test.ts",
    "../agents/__tests__/code-quality/snak.test.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
